# Test Environment Configuration for Testcontainers

# Testcontainers Configuration
USE_TESTCONTAINERS=true
TESTCONTAINER_JINA_IMAGE=python:3.11-slim
TESTCONTAINER_ONNX_IMAGE=python:3.11-slim
TESTCONTAINER_COMPLETION_IMAGE=python:3.11-slim
CONTAINER_STARTUP_TIMEOUT=120s

# Disable API services for tests by default
USE_LOCAL_EMBEDDINGS=false
USE_OLLAMA_COMPLETIONS=false

# Backend comparison tests - always enabled with containers  
ENABLE_BACKEND_COMPARISON_TESTS=true

# Model Configuration for Containers
EMBEDDINGS_MODEL=jina-embeddings-v2-base-en
COMPLETIONS_MODEL=mock

# Database Configuration for Tests  
MEMORY_BACKEND=postgresql
POSTGRES_PORT=0  # Let testcontainers assign dynamic port

# Test Data Configuration
TEST_DATA_SIZE=small  # small, medium, large
TEST_CONCURRENT_WORKERS=4
TEST_QUERY_TIMEOUT=30s

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock
TESTCONTAINERS_RYUK_DISABLED=false

# Logging Configuration for Tests
LOG_LEVEL=info
TEST_LOG_LEVEL=debug