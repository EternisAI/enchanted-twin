# Telegram & WhatsApp Memory Pipeline Makefile
# 
# Simplified Pipeline: Raw ‚Üí ConversationDocument (X_0) ‚Üí Chunks (X_1) ‚Üí Prompts (X_2) ‚Üí Facts (X_3)
#
# Usage:
#   make whatsapp      - Convert WhatsApp SQLite to ConversationDocument (X_0)
#   make telegram      - Convert Telegram JSON to ConversationDocument (X_0)
#   make chatgpt       - Convert ChatGPT JSON to ConversationDocument (X_0)
#   make gmail         - Convert Gmail MBOX to ConversationDocument (X_0)
#   make gmail-senders - Analyze Gmail senders to include/exclude them from the ConversationDocument (X_0)
#   make chunks        - Convert ConversationDocument (X_0) to chunks (X_1)
#   make prompts       - Convert chunks (X_1) to formatted prompts (X_2)
#   make facts         - Convert formatted prompts (X_2) to facts (X_3)
#   TYPE=gmail         - Add fuzzy type filtering to any command (e.g. make chunks TYPE=gm)
#   make all           - Run complete pipeline (Raw ‚Üí X_3)
#   make clean         - Remove all output files
#   make build         - Build the pipeline tool

TOOL_NAME = memory-processor-test
INPUT_DIR = pipeline_input
OUTPUT_DIR = pipeline_output

# Build the tool
build:
	@echo "üî® Building pipeline tool..."
	go build -o $(TOOL_NAME) .

# Convert WhatsApp SQLite database to ConversationDocument (X_0)
# Usage: make whatsapp [FILE=path/to/file.sqlite]
whatsapp:
	@echo "üì± Converting WhatsApp SQLite to ConversationDocument (X_0)..."
	@mkdir -p $(INPUT_DIR) $(OUTPUT_DIR)
ifdef FILE
	@echo "üìÅ Using specified file: $(FILE)"
	@if [ ! -f "$(FILE)" ]; then \
		echo "‚ùå File not found: $(FILE)"; \
		exit 1; \
	fi
	@go run . whatsapp "$(FILE)"
	@echo "‚úÖ WhatsApp X_0 ConversationDocument created: $(OUTPUT_DIR)/X_0_whatsapp.jsonl"
else
	@echo "üîç Auto-detecting WhatsApp database..."
	@if [ ! -f "$(INPUT_DIR)"/*.sqlite ] && [ ! -f "$(INPUT_DIR)"/*.db ]; then \
		echo "‚ùå No SQLite database found in $(INPUT_DIR)/"; \
		echo "üí° Place your WhatsApp database (ChatStorage.sqlite or *.db) in $(INPUT_DIR)/"; \
		echo "üí° Or use: make whatsapp FILE=path/to/your/file.sqlite"; \
		exit 1; \
	fi
	@SQLITE_FILE=$$(ls $(INPUT_DIR)/*.sqlite $(INPUT_DIR)/*.db 2>/dev/null | head -1); \
	if [ -n "$$SQLITE_FILE" ]; then \
		echo "‚úÖ Found WhatsApp database: $$SQLITE_FILE"; \
		go run . whatsapp "$$SQLITE_FILE"; \
		echo "‚úÖ WhatsApp X_0 ConversationDocument created: $(OUTPUT_DIR)/X_0_whatsapp.jsonl"; \
	fi
endif

# Convert Telegram JSON export to ConversationDocument (X_0)
# Usage: make telegram [FILE=path/to/file.json]
telegram:
	@echo "üì± Converting Telegram JSON to ConversationDocument (X_0)..."
	@mkdir -p $(INPUT_DIR) $(OUTPUT_DIR)
ifdef FILE
	@echo "üìÅ Using specified file: $(FILE)"
	@if [ ! -f "$(FILE)" ]; then \
		echo "‚ùå File not found: $(FILE)"; \
		exit 1; \
	fi
	@go run . telegram "$(FILE)"
	@echo "‚úÖ Telegram X_0 ConversationDocument created: $(OUTPUT_DIR)/X_0_telegram.jsonl"
else
	@echo "üîç Auto-detecting Telegram JSON export..."
	@if [ ! -f "$(INPUT_DIR)"/*.json ]; then \
		echo "‚ùå No JSON export found in $(INPUT_DIR)/"; \
		echo "üí° Place your Telegram export JSON file in $(INPUT_DIR)/"; \
		echo "üí° Or use: make telegram FILE=path/to/your/file.json"; \
		exit 1; \
	fi
	@JSON_FILE=$$(ls $(INPUT_DIR)/*.json 2>/dev/null | head -1); \
	if [ -n "$$JSON_FILE" ]; then \
		echo "‚úÖ Found Telegram export: $$JSON_FILE"; \
		go run . telegram "$$JSON_FILE"; \
		echo "‚úÖ Telegram X_0 ConversationDocument created: $(OUTPUT_DIR)/X_0_telegram.jsonl"; \
	fi
endif

# Convert ChatGPT JSON export to ConversationDocument (X_0)
# Usage: make chatgpt [FILE=path/to/conversations.json]
chatgpt:
	@echo "ü§ñ Converting ChatGPT JSON to ConversationDocument (X_0)..."
	@mkdir -p $(INPUT_DIR) $(OUTPUT_DIR)
ifdef FILE
	@echo "üìÅ Using specified file: $(FILE)"
	@if [ ! -f "$(FILE)" ]; then \
		echo "‚ùå File not found: $(FILE)"; \
		exit 1; \
	fi
	@go run . chatgpt "$(FILE)"
	@echo "‚úÖ ChatGPT X_0 ConversationDocument created: $(OUTPUT_DIR)/X_0_chatgpt.jsonl"
else
	@echo "üîç Auto-detecting ChatGPT conversations.json..."
	@if [ ! -f "$(INPUT_DIR)"/conversations.json ] && [ ! -f "$(INPUT_DIR)"/*.json ]; then \
		echo "‚ùå No ChatGPT conversations.json found in $(INPUT_DIR)/"; \
		echo "üí° Place your ChatGPT conversations.json file in $(INPUT_DIR)/"; \
		echo "üí° Or use: make chatgpt FILE=path/to/your/conversations.json"; \
		exit 1; \
	fi
	@JSON_FILE=$$(ls $(INPUT_DIR)/conversations.json $(INPUT_DIR)/*.json 2>/dev/null | head -1); \
	if [ -n "$$JSON_FILE" ]; then \
		echo "‚úÖ Found ChatGPT export: $$JSON_FILE"; \
		go run . chatgpt "$$JSON_FILE"; \
		echo "‚úÖ ChatGPT X_0 ConversationDocument created: $(OUTPUT_DIR)/X_0_chatgpt.jsonl"; \
	fi
endif

# Convert Gmail MBOX to ConversationDocument (X_0)
gmail:
	@echo "üìß Converting Gmail MBOX to ConversationDocument (X_0)..."
	@mkdir -p $(INPUT_DIR) $(OUTPUT_DIR)
	@if [ ! -f "$(INPUT_DIR)"/*.mbox ]; then \
		echo "‚ùå No Gmail MBOX found in $(INPUT_DIR)/"; \
		echo "üí° Place your Gmail MBOX file in $(INPUT_DIR)/"; \
		exit 1; \
	fi
	@MBOX_FILE=$$(ls $(INPUT_DIR)/*.mbox 2>/dev/null | head -1); \
	if [ -n "$$MBOX_FILE" ]; then \
		echo "‚úÖ Found Gmail MBOX: $$MBOX_FILE"; \
		go run . gmail; \
		echo "‚úÖ Gmail X_0 ConversationDocument created: $(OUTPUT_DIR)/X_0_gmail.json"; \
	fi

# Analyze Gmail senders only
gmail-senders:
	@echo "üìä Analyzing Gmail senders..."
	@mkdir -p $(INPUT_DIR) $(OUTPUT_DIR)
	@if [ ! -f "$(INPUT_DIR)"/*.mbox ]; then \
		echo "‚ùå No Gmail MBOX found in $(INPUT_DIR)/"; \
		echo "üí° Place your Gmail MBOX file in $(INPUT_DIR)/"; \
		exit 1; \
	fi
	@MBOX_FILE=$$(ls $(INPUT_DIR)/*.mbox 2>/dev/null | head -1); \
	if [ -n "$$MBOX_FILE" ]; then \
		echo "‚úÖ Found Gmail MBOX: $$MBOX_FILE"; \
		go run . gmail --senders; \
		echo "‚úÖ Sender analysis completed: $(OUTPUT_DIR)/senders.json"; \
		echo "üí° Edit $(OUTPUT_DIR)/senders.json then run 'make gmail' again"; \
	fi

# Convert ConversationDocument to chunks (X_0 ‚Üí X_1)
chunks:
	@echo "üß© Converting ConversationDocument to chunks (X_0 ‚Üí X_1)..."
	@mkdir -p $(INPUT_DIR) $(OUTPUT_DIR)
	@if ls "$(OUTPUT_DIR)"/X_0_*.jsonl >/dev/null 2>&1; then \
		echo "‚úÖ Auto-detecting X_0 ConversationDocument..."; \
		if [ -n "$(TYPE)" ]; then \
			echo "üîç Using type filter: $(TYPE)"; \
			go run . chunks --type=$(TYPE); \
		else \
			go run . chunks; \
		fi; \
		echo "‚úÖ X_1 chunks created in $(OUTPUT_DIR)/"; \
	else \
		echo "‚ùå No X_0 ConversationDocument file found. Run 'make whatsapp', 'make telegram', 'make chatgpt', or 'make gmail' first."; \
		exit 1; \
	fi

# Convert chunks to formatted prompts (X_1 ‚Üí X_2)
prompts:
	@echo "üìù Converting chunks to formatted prompts (X_1 ‚Üí X_2)..."
	@if ls "$(OUTPUT_DIR)"/X_1_*.jsonl >/dev/null 2>&1; then \
		echo "‚úÖ Auto-detecting X_1 chunks..."; \
		if [ -n "$(TYPE)" ]; then \
			echo "üîç Using type filter: $(TYPE)"; \
			go run . prompts --type=$(TYPE); \
		else \
			go run . prompts; \
		fi; \
		echo "‚úÖ X_2 formatted prompts created in $(OUTPUT_DIR)/"; \
	else \
		echo "‚ùå No X_1 chunks file found. Run 'make chunks' first."; \
		exit 1; \
	fi

# Convert formatted prompts to facts (X_2 ‚Üí X_3)
facts:
	@echo "üß† Converting formatted prompts to facts (X_2 ‚Üí X_3)..."
	@if ls "$(OUTPUT_DIR)"/X_2_*.jsonl >/dev/null 2>&1; then \
		echo "‚úÖ Auto-detecting X_2 formatted prompts..."; \
		if [ -n "$(TYPE)" ]; then \
			echo "üîç Using type filter: $(TYPE)"; \
			go run . facts --type=$(TYPE); \
		else \
			go run . facts; \
		fi; \
		echo "‚úÖ X_3 facts created in $(OUTPUT_DIR)/"; \
	else \
		echo "‚ùå No X_2 formatted prompts file found. Run 'make prompts' first."; \
		exit 1; \
	fi

# Store facts in Weaviate database (X_3 ‚Üí Weaviate)
store:
	@echo "üíæ Storing facts in Weaviate database..."
	@if ls "$(OUTPUT_DIR)"/X_3_*.jsonl >/dev/null 2>&1; then \
		go run . store; \
		echo "‚úÖ Facts stored in Weaviate database"; \
	else \
		echo "‚ùå No X_3 facts file found. Run 'make facts' first."; \
		exit 1; \
	fi

# Run comprehensive memory consolidation for all 20 subjects (Weaviate ‚Üí X_4)
consolidation:
	@echo "üß© Running comprehensive memory consolidation for all subjects..."
	@go run . consolidation
	@echo "‚úÖ Comprehensive consolidation reports created: $(OUTPUT_DIR)/X_4_consolidation_reports.jsonl"

# Store consolidated facts back into Weaviate (X_4 ‚Üí Weaviate consolidations)
store-consolidations:
	@echo "üì¶ Storing consolidated facts in Weaviate database..."
	@if [ ! -f "$(OUTPUT_DIR)/X_4_consolidation_reports.jsonl" ]; then \
		echo "‚ùå X_4_consolidation_reports.jsonl not found. Run 'make consolidation' first."; \
		exit 1; \
	fi
	@go run . store-consolidations
	@echo "‚úÖ Consolidated facts stored in Weaviate database"

# Query consolidated facts vs raw facts (Interactive demonstration)
query-consolidations:
	@echo "üîç Querying consolidated vs raw facts (demonstration)..."
	@if [ ! -f "$(OUTPUT_DIR)/X_3_consolidation_reports.jsonl" ]; then \
		echo "‚ùå Consolidations not found. Run 'make consolidation' and 'make store-consolidations' first."; \
		exit 1; \
	fi
	@go run . query-consolidations
	@echo "‚úÖ Query comparison completed: $(OUTPUT_DIR)/X_4_consolidation_query_results.json"

# Query consolidated facts with custom query (Vector search)
query:
	@echo "üîç Vector search on consolidated facts..."
	@if [ ! -f "$(OUTPUT_DIR)/X_3_consolidation_reports.jsonl" ]; then \
		echo "‚ùå Consolidations not found. Run 'make consolidation' and 'make store-consolidations' first."; \
		exit 1; \
	fi
	@if [ -z "$(QUERY)" ]; then \
		echo "‚ùå Query required. Usage: make query QUERY=\"your search query\""; \
		echo "üí° Example: make query QUERY=\"family relationships\""; \
		exit 1; \
	fi
	@echo "üîç Searching for: \"$(QUERY)\""
	@QUERY="$(QUERY)" go run . query-consolidations
	@echo "‚úÖ Vector search completed!"

# Run complete pipeline - auto-detects data source
all:
	@echo "üöÄ Running complete memory pipeline..."
	@mkdir -p $(INPUT_DIR) $(OUTPUT_DIR)
	@echo "üîç Auto-detecting data source..."
	@# Check for existing X_0 files first
	@if [ -f "$(OUTPUT_DIR)/X_0_whatsapp.json" ] || [ -f "$(OUTPUT_DIR)/X_0_telegram.json" ] || [ -f "$(OUTPUT_DIR)/X_0_chatgpt.json" ] || [ -f "$(OUTPUT_DIR)/X_0_gmail.json" ]; then \
		echo "‚úÖ Found existing X_0 ConversationDocument files, proceeding with pipeline..."; \
	else \
		echo "üì± Looking for raw data sources..."; \
		HAS_WHATSAPP=false; \
		HAS_TELEGRAM=false; \
		HAS_CHATGPT=false; \
		HAS_GMAIL=false; \
		if ls $(INPUT_DIR)/*.sqlite $(INPUT_DIR)/*.db >/dev/null 2>&1; then \
			echo "‚úÖ Found WhatsApp database"; \
			HAS_WHATSAPP=true; \
		fi; \
		if ls $(INPUT_DIR)/*.json >/dev/null 2>&1; then \
			echo "‚úÖ Found JSON export (Telegram/ChatGPT)"; \
			HAS_TELEGRAM=true; \
			HAS_CHATGPT=true; \
		fi; \
		if ls $(INPUT_DIR)/*.mbox >/dev/null 2>&1; then \
			echo "‚úÖ Found Gmail MBOX"; \
			HAS_GMAIL=true; \
		fi; \
		if [ "$$HAS_WHATSAPP" = "true" ] && [ "$$HAS_TELEGRAM" = "true" ] && [ "$$HAS_CHATGPT" = "true" ] && [ "$$HAS_GMAIL" = "true" ]; then \
			echo "‚ö†Ô∏è  All data sources found!"; \
			echo "üí° Choose one: 'make whatsapp all', 'make telegram all', 'make chatgpt all', or 'make gmail all'"; \
			echo "üí° Or manually run the conversion first, then 'make all'"; \
			exit 1; \
		elif [ "$$HAS_WHATSAPP" = "true" ] && [ "$$HAS_TELEGRAM" = "true" ] && [ "$$HAS_CHATGPT" = "true" ]; then \
			echo "‚ö†Ô∏è  WhatsApp, Telegram, and ChatGPT data found!"; \
			echo "üí° Choose one: 'make whatsapp all', 'make telegram all', or 'make chatgpt all'"; \
			echo "üí° Or manually run the conversion first, then 'make all'"; \
			exit 1; \
		elif [ "$$HAS_WHATSAPP" = "true" ] && [ "$$HAS_TELEGRAM" = "true" ]; then \
			echo "‚ö†Ô∏è  WhatsApp and Telegram data found!"; \
			echo "üí° Choose one: 'make whatsapp all' or 'make telegram all'"; \
			echo "üí° Or manually run the conversion first, then 'make all'"; \
			exit 1; \
		elif [ "$$HAS_WHATSAPP" = "true" ]; then \
			echo "üîÑ Converting WhatsApp data first..."; \
			$(MAKE) whatsapp; \
		elif [ "$$HAS_TELEGRAM" = "true" ]; then \
			echo "üîÑ Converting Telegram data first..."; \
			$(MAKE) telegram; \
		elif [ "$$HAS_CHATGPT" = "true" ]; then \
			echo "üîÑ Converting ChatGPT data first..."; \
			$(MAKE) chatgpt; \
		elif [ "$$HAS_GMAIL" = "true" ]; then \
			echo "üîÑ Converting Gmail data first..."; \
			$(MAKE) gmail; \
		else \
			echo "‚ùå No data sources found in $(INPUT_DIR)/"; \
			echo "üí° Place either:"; \
			echo "   üì± WhatsApp: *.sqlite or *.db file"; \
			echo "   üì± Telegram: *.json export file"; \
			echo "   ü§ñ ChatGPT: conversations.json or *.json file"; \
			echo "   üìß Gmail: *.mbox file"; \
			exit 1; \
		fi; \
	fi
	@echo "üîÑ Running pipeline steps..."
	$(MAKE) chunks  
	$(MAKE) facts
	$(MAKE) store
	$(MAKE) consolidation
	@echo "üéâ Complete pipeline finished! Check $(OUTPUT_DIR)/ for results."

# Clean all output files
clean:
	@echo "üßπ Cleaning output files..."
	rm -rf $(OUTPUT_DIR)

# Show pipeline status
status:
	@echo "üìä Pipeline Status:"
	@echo
	@echo "Input files (pipeline_input/):"
	@ls -la $(INPUT_DIR)/ 2>/dev/null || echo "  (no input files)"
	@echo
	@echo "Output files (pipeline_output/):"
	@ls -la $(OUTPUT_DIR)/ 2>/dev/null || echo "  (no output files)"
	@echo
	@if [ -f "$(OUTPUT_DIR)/X_0_whatsapp.json" ]; then echo "‚úÖ WhatsApp X_0 ConversationDocument ready"; fi
	@if [ -f "$(OUTPUT_DIR)/X_0_telegram.json" ]; then echo "‚úÖ Telegram X_0 ConversationDocument ready"; fi
	@if [ -f "$(OUTPUT_DIR)/X_0_chatgpt.json" ]; then echo "‚úÖ ChatGPT X_0 ConversationDocument ready"; fi
	@if [ -f "$(OUTPUT_DIR)/X_0_gmail.json" ]; then echo "‚úÖ Gmail X_0 ConversationDocument ready"; fi
	@if [ -f "$(OUTPUT_DIR)/X_1_chunked_documents.json" ]; then echo "‚úÖ X_1 chunks ready"; fi
	@if [ -f "$(OUTPUT_DIR)/X_2_extracted_facts.json" ]; then echo "‚úÖ X_2 facts ready"; fi
	@if [ -f "$(OUTPUT_DIR)/X_4_consolidation_reports.jsonl" ]; then echo "‚úÖ X_4 consolidation reports ready"; fi
	@if [ -f "$(OUTPUT_DIR)/X_4_query_results_*.json" ]; then echo "‚úÖ X_4 query results available"; fi

# Help
help:
	@echo "Simplified Memory Pipeline Commands:"
	@echo
	@echo "üì± Data Conversion (Raw ‚Üí X_0 ConversationDocument):"
	@echo "  make whatsapp   - Convert WhatsApp SQLite to X_0 ConversationDocument"
	@echo "  make telegram   - Convert Telegram JSON to X_0 ConversationDocument"
	@echo "  make chatgpt    - Convert ChatGPT JSON to X_0 ConversationDocument"
	@echo "  make gmail      - Convert Gmail MBOX to X_0 ConversationDocument"
	@echo
	@echo "üß† Atomic Memory Pipeline (X_i ‚Üí X_{i+1}):"
	@echo "  make chunks     - X_0 ConversationDocument ‚Üí X_1 chunks"
	@echo "  make prompts    - X_1 chunks ‚Üí X_2 formatted prompts"
	@echo "  make facts      - X_2 formatted prompts ‚Üí X_3 facts"
	@echo "  make store      - X_3 facts ‚Üí Weaviate database"
	@echo
	@echo "üîç Type Filtering (fuzzy substring matching):"
	@echo "  make chunks TYPE=gmail     - Process only gmail files"
	@echo "  make prompts TYPE=whats    - Process only whatsapp files"
	@echo "  make facts TYPE=tel        - Process only telegram files"
	@echo "  make consolidation - Weaviate ‚Üí X_4 comprehensive consolidation (all 20 subjects)"
	@echo "  make store-consolidations - X_4 consolidation ‚Üí Weaviate consolidations storage"
	@echo "  make query-consolidations - Test consolidated vs raw fact querying"
	@echo "  make query QUERY=\"...\" - Vector search on consolidated facts"
	@echo
	@echo "‚ö° Utilities:"
	@echo "  make all        - Auto-detect data source and run complete pipeline (Raw ‚Üí X_3)"
	@echo "  make build      - Build the tool"
	@echo "  make clean      - Remove output files"
	@echo "  make status     - Show current pipeline state"
	@echo "  make help       - Show this help"
	@echo
	@echo "üìã Simplified Workflow:"
	@echo
		@echo "For WhatsApp:"
	@echo "  make whatsapp   # SQLite ‚Üí X_0 ConversationDocument" 
	@echo "  make chunks     # X_0 ‚Üí X_1 chunks"
	@echo "  make prompts    # X_1 ‚Üí X_2 prompts"
	@echo "  make facts      # X_2 ‚Üí X_3 facts"
	@echo "  make store      # X_3 ‚Üí Weaviate database"
	@echo "  make consolidation # Weaviate ‚Üí X_4 report"
	@echo
	@echo "For Telegram:"
	@echo "  make telegram   # JSON ‚Üí X_0 ConversationDocument"  
	@echo "  make chunks     # X_0 ‚Üí X_1 chunks"
	@echo "  make prompts    # X_1 ‚Üí X_2 prompts"
	@echo "  make facts      # X_2 ‚Üí X_3 facts"
	@echo "  make store      # X_3 ‚Üí Weaviate database"
	@echo "  make consolidation # Weaviate ‚Üí X_4 report"
	@echo
	@echo "For ChatGPT:"
	@echo "  make chatgpt    # JSON ‚Üí X_0 ConversationDocument"
	@echo "  make chunks     # X_0 ‚Üí X_1 chunks"
	@echo "  make prompts    # X_1 ‚Üí X_2 prompts"
	@echo "  make facts      # X_2 ‚Üí X_3 facts"
	@echo "  make store      # X_3 ‚Üí Weaviate database"
	@echo "  make consolidation # Weaviate ‚Üí X_4 report"
	@echo
	@echo "For Gmail:"
	@echo "  make gmail      # MBOX ‚Üí X_0 ConversationDocument"
	@echo "  make chunks     # X_0 ‚Üí X_1 chunks"
	@echo "  make prompts    # X_1 ‚Üí X_2 prompts"
	@echo "  make facts      # X_2 ‚Üí X_3 facts"
	@echo "  make store      # X_3 ‚Üí Weaviate database"
	@echo "  make consolidation # Weaviate ‚Üí X_4 report"
	@echo
	@echo "üî• Clean Pipeline - No intermediate JSONL step!"
	@echo
	@echo "üí° Comprehensive Consolidation:"
	@echo "  make consolidation  # Runs consolidation for all 20 canonical subjects"
	@echo "                      # Creates comprehensive X_3 report with all subject insights"

.PHONY: build whatsapp telegram chatgpt gmail gmail-senders chunks facts store consolidation store-consolidations query-consolidations query all clean status help 